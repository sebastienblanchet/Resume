<$- edu.comment $> }
\dates{\textsl{<$- edu.start $> - <$- edu.end $>}}

<$ }$>
%--------------------------------------------------------------------------------


\toprule
%-------------------------------------------------------------------------------
% EXPERIENCE
%-------------------------------------------------------------------------------
% \faSuitcase \faBlackTie
\section{\headingexperience}
% Modify layout
\begin{format}
\employer{l}\location{r}\\
\title{l}\dates{r}\\
\body\\
\end{format}

<$ var i = 0; for (var job of jobs) { $>% FTE <$- i++ $>
\employer{\textbf{\href{<$- job.url $>}{<$- job.employer $>}{\logo<$- job.id $>}}}
\location{\textbf{<$- job.location $>}}
\title{\textsl{<$- job.title $> - <$- job.division $>}}
\dates{\textsl{<$- job.start $> - <$- job.end $>}}
\begin{position}
<$ job.description.forEach(function(desc){ $>\tb <$- desc $>\\
<$ }); $>\end{position}

<$ }$>
%-------------------------------------------------------------------------------


