%-------------------------------------------------------------------------------
\section{\headingeducation}
\begin{format}
\employer{l}\location{r}\\
\title{l}\dates{r}\\
\end{format}

<$ var i = 0; for (var edu of education) { $>% ED <$- i++ $>
\employer{\textbf{\href{<$- edu.url $>}{<$- edu.name $>}{\logo<$- edu.id $>}}}
