\employer{\textbf{\href{<$- proj.url $>}{<$- proj.related $>}}}
\dates{\textsl{<$- proj.date $>}}
\begin{position}
<$ proj.description.forEach(function(desc){ $>\tb <$- desc $>\\
<$ }); $>\end{position}

<$ }$>
